VITE_API_URL=http://localhost:8000
VITE_AUTH_ENDPOINT=/auth
VITE_STORAGE_ENDPOINT=/storage

# Server Configuration
PORT=8000
NODE_ENV=development

# Security Settings
JWT_SECRET=your_secure_jwt_secret_key_change_this_in_production
COOKIE_SECRET=your_secure_cookie_secret_key_change_this_in_production
SERVER_MASTER_KEY=your_secure_server_master_key_32_bytes_base64

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pixvault

# Admin Configuration (Change these in production!)
ADMIN_EMAIL=admin@pixvault.com
ADMIN_PASSWORD=admin@123
ADMIN_PASSMATRIX_SEQUENCE=1,2,3,4,5

# File Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # maximum requests per window

# Session Configuration
SESSION_DURATION=24h # 24 hours
REFRESH_TOKEN_DURATION=7d # 7 days

# Encryption Settings
KEY_DERIVATION_ITERATIONS=100000
HASH_LENGTH=256
SALT_LENGTH=16
